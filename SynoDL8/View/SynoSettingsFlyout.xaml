<SettingsFlyout
    x:Class="SynoDL8.View.SynoSettingsFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SynoDL8.View"
    xmlns:common="using:SynoDL8.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SynoDL8.ViewModel"
    DataContext="{Binding Path=Settings, Source={StaticResource Locator}}"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="323"
    x:Uid="SynoSettingsFlyout">

    <SettingsFlyout.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </SettingsFlyout.Resources>
    
    <StackPanel x:Name="FlyoutContent">

        <TextBlock x:Uid="hostname"/>
        <TextBox Text="{Binding Path=Hostname, Mode=TwoWay}"/>

        <TextBlock x:Uid="user"/>
        <TextBox Text="{Binding Path=User, Mode=TwoWay}"/>
                    
        <TextBlock x:Uid="password"/>
        <PasswordBox Password="{Binding Path=Password, Mode=TwoWay}"/>
                    
        <Button Command="{Binding Path=SaveCommand}" Foreground="White" Margin="0 10" x:Uid="save"/>

    </StackPanel>
    
</SettingsFlyout>
