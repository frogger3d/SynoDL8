<Application
    x:Class="SynoDL8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="using:SynoDL8.Views"
    xmlns:local="using:SynoDL8"
    xmlns:localData="using:SynoDL8.Data"
    xmlns:vm="using:SynoDL8.ViewModels"
    >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">SynoDL8</x:String>


            <DataTemplate x:Key="stringTemplate">
                <TextBlock Text="{Binding}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="taskTemplate">
                <view:TaskView />
            </DataTemplate>
            
            <DataTemplate x:Key="tasksTemplate">
                <ItemsControl ItemsSource="{Binding}" ItemTemplate="{StaticResource taskTemplate}" Background="Pink" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </DataTemplate>
            
            <local:ContentDataTemplateSelector x:Key="ContentDataTemplateSelector"
                                               StringTemplate="{StaticResource stringTemplate}"
                                               TaskListTemplate="{StaticResource tasksTemplate}"
                                               />

            <vm:ItemsViewModel x:Key="ItemsViewModel"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
